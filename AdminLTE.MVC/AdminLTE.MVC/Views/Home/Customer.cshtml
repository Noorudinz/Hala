
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Customer Register Details</h1>

<style>
    .status {
        margin: 0 auto;
        padding: 5px;
        font-size: 14px;
        border-radius: 3px;
        text-transform: capitalize;
        width: 90px;
        display: block;
        text-align: center;
        color: #fff;
    }

    .approved {
        background-color: #23d160;
        border-color: transparent;
    }

    .rejected {
        background-color: #dc3545;
        border-color: transparent;
    }
</style>

<div class="box">
    <div class="box-header">

    </div>
    <!-- /.box-header -->
    <div class="box-body">

        <div style="width:90%; margin:0 auto" class="tablecontainer">
            <a class="popup btn btn-primary" href="#" style="margin-bottom:20px; margin-top:20px;" onclick="AddEditCustomer(0)">Add Customer</a>

            <div class="container">
                <br />
                <div style="width:90%; margin:0 auto;">
                    <table id="dtCustomerMaster" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>CustomerId</th>
                                <th>CustomerName</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>UserType</th>
                                <th>IsActive</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>


    <div class="modal fade" id="myModal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Add Customer</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="myModalBodyDiv1">
                    <partial name="_CreateCustomer" />
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModal2">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Edit Customer</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="myModalBodyDiv2">
                    <partial name="_EditCustomer" />
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" id="hiddenEmployeeId" />
</div>


<!-- page script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

<script src="~/plugins/jquery-validation/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script src="~/plugins/jquery-ui/jquery-ui.js"></script>
<script type="text/javascript">
    //$(function () {
