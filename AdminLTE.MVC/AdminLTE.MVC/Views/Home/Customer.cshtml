    //        'lengthChange': false,
    //        'searching': false,
    //        'ordering': true,
    //        'info': true,
    //        'autoWidth': false
    //    })
    //})

    $(document).ready(function () {
         $("#dtCustomerMaster").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/Home/LoadData",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs": [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                },
                {
                    "targets": [5],
                    render: function (status, type, row, meta) {
                       if (status == true) {
                           status = '<td><span class="approved status">Active</span></td>'
                        } else if (status == false) {
                           status = '<td><span class="rejected status">Closed</span></td>'
                        }
                        return status;
                    },
                    "visible": true,
                    "searchable": false
                },
            ],
            "columns": [
                { "data": "customerId", "name": "CustomerId", "autoWidth": true },
                { "data": "customerName", "name": "CustomerName", "autoWidth": true },
                { "data": "email", "name": "Email", "autoWidth": true },
                { "data": "phone", "name": "Phone", "autoWidth": true },
                { "data": "userType", "name": "UserType", "autoWidth": true },
                { "data": "isActive", "name": "isActive", "autoWidth": true },

                {
                    "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="#" onclick=EditCustomer(' + full.customerId + ');>Edit</a>'; }
                },
                {
                    data: null,
                    render: function (data, type, row) {
                        return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.customerId + "'); >Delete</a>";
                    }
                },
            ]

        });
    });

        function DeleteData(customerId) {
            if (confirm("Are you sure you want to delete ...?" + customerId)) {
                Delete(customerId);
            } else {
                return false;
            }
        }


        function Delete(customerId) {
        var url = '@Url.Content("~/")' + "Home/DeleteCustomer";

        $.post(url, { ID: customerId }, function(data) {
            if (data) {
                oTable = $('#dtCustomerMaster').DataTable();
                oTable.draw();
            } else {
                alert("Something Went Wrong!");
            }
        });
        }

        var AddEditCustomer= function (customerId) {

            var url = "/Home/AddEditCustomer?CustomerId=" + customerId;

            $("#myModalBodyDiv1").load(url, function () {
                $("#myModal1").modal("show");

            })

        }

        var EditCustomer = function (customerId) {

            var url = "/Home/EditCustomer?CustomerId=" + customerId;

            $("#myModalBodyDiv2").load(url, function () {
                $("#myModal2").modal("show");

            })

        }

</script>
