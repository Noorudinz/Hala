
@{
    ViewData["Title"] = "Customer Details";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<style>
    .status {
        margin: 0 auto;
        padding: 5px;
        font-size: 14px;
        border-radius: 3px;
        text-transform: capitalize;
        width: 90px;
        display: block;
        text-align: center;
        color: #fff;
    }

    .approved {
        background-color: #23d160;
        border-color: transparent;
    }

    .rejected {
        background-color: #dc3545;
        border-color: transparent;
    }
</style>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Data Table With Full Features</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">

        <div class="container">
            <br />
            <div style="width:90%; margin:0 auto;">
                <table id="dtCustomerMaster" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>CustomerId</th>
                            <th>CustomerName</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>UserType</th>  
                            <th>IsActive</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <!-- /.box-body -->
</div>

<!-- page script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script type="text/javascript">
    //$(function () {
    //    $('#example1').DataTable()
    //    $('#example2').DataTable({
    //        'paging': true,
    //        'lengthChange': false,
    //        'searching': false,
    //        'ordering': true,
    //        'info': true,
    //        'autoWidth': false
    //    })
    //})

    $(document).ready(function () {
        $("#dtCustomerMaster").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/Home/LoadData",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs": [{
                    "targets": [0],             
                    "visible": false,
                    "searchable": false
                },
                {
                    "targets": [5],
                    render: function (status, type, row, meta) {
                       if (status == true) {
                           status = '<td><span class="approved status">Active</span></td>'
                        } else if (status == false) {
                           status = '<td><span class="rejected status">Closed</span></td>'
                        }
                        return status;
                    },
                    "visible": true,
                    "searchable": false
                },
            ],
            "columns": [
                { "data": "customerId", "name": "CustomerId", "autoWidth": true },
                { "data": "customerName", "name": "CustomerName", "autoWidth": true },
                { "data": "email", "name": "Email", "autoWidth": true },
                { "data": "phone", "name": "Phone", "autoWidth": true },              
                { "data": "userType", "name": "UserType", "autoWidth": true },
                { "data": "isActive", "name": "isActive", "autoWidth": true },
              
                {
                    "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/DemoGrid/Edit/' + full.CustomerID + '">Edit</a>'; }
                },
                {
                    data: null,
                    render: function (data, type, row) {
                        return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.CustomerID + "'); >Delete</a>";
                    }
                },
            ]

        });
    });

    function DeleteData(CustomerID) {
    if (confirm("Are you sure you want to delete ...?")) {
        Delete(CustomerID);
    } else {
        return false;
    }
}


function Delete(CustomerID) {
    var url = '@Url.Content("~/")' + "DemoGrid/Delete";

    $.post(url, { ID: CustomerID }, function(data) {
        if (data) {
            oTable = $('#example').DataTable();
            oTable.draw();
        } else {
            alert("Something Went Wrong!");
        }
    });
}

</script>