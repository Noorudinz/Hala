@model EditProductMaster
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-3">
            <h2>Edit Product</h2>
        </div>
        <div class="col-7">
            <span style="color: red;" id="errorMsg"></span>
        </div>
        <div class="col-2">
            <a href="/Product/Index" class="btn btn-primary" style="float: right;">Back</a>
        </div>
    </div>

    <div class="container">
        <input type="hidden" asp-for="ProductMaster.Product_Id"  />
        <form class="form-horizontal">
            <div class="card-body">
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Category</label>
                    <div class="col-sm-10">
                        <select id="category" asp-for="ProductMaster.CategoryId" asp-items="@(new SelectList(Model.Category, "CategoryId", "Category_Name"))" class="custom-select">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Sub Category</label>
                    <div class="col-sm-10">
                        <select id="subCategory" asp-for="ProductMaster.SubCategoryId" asp-items="@(new SelectList(Model.SubCategory, "SubCategoryId", "SubCategory_Name"))" class="custom-select">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Brand</label>
                    <div class="col-sm-10">
                        <select id="brand" asp-for="ProductMaster.BrandId" asp-items="@(new SelectList(Model.Brand, "BrandId", "BrandName"))" class="custom-select">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Color</label>
                    <div class="col-sm-10">
                        <select id="colors" asp-for="ColorId" asp-items="@(new SelectList(Model.Color, "ColorId", "Color_Name"))" multiple="" class="form-control">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">SKU</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ProductMaster.SKU" class="form-control" id="skuProduct">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Product Name</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ProductMaster.Product_Name" class="form-control" id="productName">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Short Description</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ProductMaster.Short_Desc" class="form-control" id="shortDescription">
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button type="button" id="savebtn" class="btn btn-info">Next</button>
            </div>

        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#errorMsg').text('');
       
    });

    //Get SubCategory On Select Category
    $('#category').on('change', function () {
        //alert(this.value);
        $.ajax({
            type: "GET",
            url: "@Url.Action("GetSubCategoryByCategoryId", "SubCategory")",
            contentType: 'application/json; charset=utf-8',
            data: { 'selectedId': this.value },
            dataType: 'json',
            success: function (response) {
                if (response != null) {
                    $('#subCategory').prop("disabled", false);
                    var s = '<option value="-1">Please Select a SubCategory</option>';
                    for (var i = 0; i < response.length; i++) {
                        s += '<option value="' + response[i].subCategoryId + '">' + response[i].subCategory_Name + '</option>';
                    }
                    $("#subCategory").html(s);
                }
            },
            error: function (e) {
                console.log(e);
            }
        });
    });

    $('#savebtn').click(function () {
            try
            {
                if (validateCategory() && validateSubCategory() && validateColor() && validateRequiredFields()) {
                    addProduct();
                }
            } catch (e) {
                console.log(e);
            }

        });

    function validateCategory() {
        var category = ($('#category').val());
        if (category != null && category != -1) {
            return true;
        } else {
            $('#errorMsg').text('* Select proper category');
        }
    }

    function validateSubCategory() {
        var subCategory = ($('#subCategory').val());
        if (subCategory != null && subCategory != -1) {
            return true;
        } else {
            $('#errorMsg').text('* Select proper sub category');
        }
    }

    function validateColor() {
        var colors = ($('#colors').val());
        if (colors != null && colors != -1 && colors != '') {
            return true;
        } else {
            $('#errorMsg').text('* Select atleast one color');
        }
    }

    function validateRequiredFields() {
        var skuProduct = $('#skuProduct').val();
        var productName = $('#productName').val();
        var shortDescription = $('#shortDescription').val();
        if (skuProduct == '') {
            $('#errorMsg').text('* SKU required');
            return false;
        }
        if (productName == '') {
            $('#errorMsg').text('* Product Name required');
            return false;
        }
        if (shortDescription == '') {
            $('#errorMsg').text('* Short Description required');
            return false;
        }

        return true;

        }

    function addProduct() {

        var productAdd = ({
            'ProductId': 0,
            'CategoryId': ($('#category').val()),
            'SubCategoryId': ($('#subCategory').val()),
            'BrandId': ($('#brand').val()),
            'ColorId': ($('#colors').val()),
            'SKU': $('#skuProduct').val(),
            'ProductName': $('#productName').val(),
            'ShortDesc': $('#shortDescription').val()
        });

        console.log(productAdd.ColorId);

        //Get Add Product
        $.ajax({
            type: "GET",
            url: "@Url.Action("AddProduct", "Product")",
            contentType: 'application/json; charset=utf-8',
            traditional: true,
            data: productAdd,
            dataType: 'json',
            success: function (response) {
                console.log(response);
                if (response != null) {
                    if (response.status === 'Success') {
                        window.location.href = '/Product/ImagesUpload/';
                        //$.ajax({
                        //    type: "GET",
                        //    url: "/Product/ImagesUpload/",
                        //    contentType: 'application/json; charset=utf-8',
                        //    data: { 'productId': response.productId },
                        //    dataType: 'json',
                        //});
                    }
                }
            },
            error: function (e) {
                console.log(e);
            }
        });

        }

    </script>
