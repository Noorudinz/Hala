@model EditProductMaster
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-3">
            <h2>Edit Product</h2>
        </div>
        <div class="col-7">
            <span style="color: red;" id="errorMsg"></span>
        </div>
        <div class="col-2">
            <a href="/Product/Index" class="btn btn-primary" style="float: right;">Back</a>
        </div>
    </div>

    <div class="container">
       
        <form class="form-horizontal" asp-controller="Product" asp-action="EditPrimary">
            <input type="hidden" asp-for="ProductMaster.Product_Id" id="productId" />
            <div class="card-body">
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Category</label>
                    <div class="col-sm-10">
                        <select id="category" asp-for="ProductMaster.CategoryId" asp-items="@(new SelectList(Model.Category, "CategoryId", "Category_Name"))" class="custom-select">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Sub Category</label>
                    <div class="col-sm-10">
                        <select id="subCategory" asp-for="ProductMaster.SubCategoryId" asp-items="@(new SelectList(Model.SubCategory, "SubCategoryId", "SubCategory_Name"))" class="custom-select">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Brand</label>
                    <div class="col-sm-10">
                        <select id="brand" asp-for="ProductMaster.BrandId" asp-items="@(new SelectList(Model.Brand, "BrandId", "BrandName"))" class="custom-select">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Color</label>
                    <div class="col-sm-10">
                        <select id="colors" asp-for="ColorId" asp-items="@(new SelectList(Model.Color, "ColorId", "Color_Name"))" multiple="" class="form-control">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">SKU</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ProductMaster.SKU" class="form-control" id="skuProduct">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Product Name</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ProductMaster.Product_Name" class="form-control" id="productName">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Short Description</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ProductMaster.Short_Desc" class="form-control" id="shortDescription">
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-info">Next</button>
            </div>

        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#errorMsg').text('');
       
        });


    </script>
