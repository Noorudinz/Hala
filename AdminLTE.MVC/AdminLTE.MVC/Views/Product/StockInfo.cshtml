@model StockInformation

@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
    TempData.Keep("ProductId");

}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Add Stock and Other Infos</h2>
        </div>
        <div class="col-7">
            <span style="color: red;" id="errorMsg"></span>
        </div>
        <div class="col-2">
            <a href="/Product/Index" class="btn btn-primary" style="float: right;">Back</a>
        </div>
    </div>

    <div class="container">
        <form enctype="multipart/form-data" asp-controller="Product" asp-action="StockInfo"
              method="post" class="form-horizontal">
            <div class="card-body">

                <div class="form-group">
                    <label for="exampleInputFile">Product Name</label>
                    <div class="input-group">
                        <div class="col-md-12">
                            <input disabled class="form-control" id="productName" value="@ViewBag.ProductName">

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Stock Availability</label>
                    <div class="input-group">
                        <div class="col-md-12">
                            <input asp-for="AvailStock" type="number" class="form-control" id="exampleInputFile">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Price</label>
                    <div class="input-group">
                        <div class="col-md-12">
                            <input asp-for="Price" type="number" class="form-control" id="exampleInputFile">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Description</label>
                    <div class="input-group">
                        <div class="col-md-12">
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter Description"></textarea>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Specification</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Weight</label>
                                <input type="text" class="form-control" asp-for="Weight" placeholder="Weight">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Dimensions</label>
                                <input type="text" class="form-control" asp-for="Dimensions" placeholder="Dimensions">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Size(s)</label>
                                <input type="text" class="form-control" asp-for="Size" placeholder="Size(s)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Color(s)</label>
                                <input type="text" class="form-control" asp-for="Color" placeholder="Color(s)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Guarantee</label>
                                <input type="text" class="form-control" asp-for="Guarantee" placeholder="Guarantee">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" id="savebtn" class="btn btn-info">Submit </button>
            </div>

        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        }); 

    </script>
